# ===== 보안 설정 =====
# 설치 스크립트 자동 실행 방지 (악성코드 차단)
ignore-scripts=true

# package-lock.json 필수 생성
package-lock=true

# 보안 감사 자동 실행
audit=true
audit-level=moderate

# ===== 설치 최적화 =====
# 정확한 버전만 설치 (캐럿/틸드 무시)
save-exact=true


# ===== 성능 설정 =====
# 병렬 다운로드 수
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# ===== 개발 편의성 =====
# 자동 package-lock.json 업데이트 방지
package-lock-only=false

# progress 표시
progress=true
